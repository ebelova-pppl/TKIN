# Add Size8/SUNOS defs here
[define([scopy],[ifelse([$*],,[dcopy],[dcopy([$*])])])]
[define([sdot],[ifelse([$*],,[ddot],[ddot([$*])])])]

,[ifelse(RealSize,16,
# Add Size16/SUNOS defs here
[define([scopy],[ifelse([$*],,[dcopy],[dcopy([$*])])])]
[define([sdot],[ifelse([$*],,[ddot],[ddot([$*])])])]

,[Errprint(Unknown "RealSize": RealSize)]
)]
)]
)]
)

# Example usage
      subroutine foo
      real x, sdot
      external scopy, sdot
      call scopy(N, SX, INCX, SY, INCY)
      x = sdot (N, SX, INCX, SY, INCY)
      end
