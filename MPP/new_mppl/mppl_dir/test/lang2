#TESTCOMMAND: mppl
# Test loops -- labeled, block, while, until, for

      subroutine foo

      do 100 i=1,10         # comment 1
        print *, "hi"
 100  continue              # comment 2

# label-less do
      do i=1,10             # comment 3
        print *, "hi"
      enddo                 # comment 4

      do i=1,10             # comment 3b
        print *, "hi"
      end do                # comment 4b

# while
      i = 0
      while (i<10)          # comment 5
        i = i + 1
        print *, "hi"
      endwhile              # comment 6

      while (i<10)          # comment 5b
        i = i + 1
        print *, "hi"
      end while             # comment 6b

# until
      i = 0
      do                    # comment 7
        i = i + 1
        print *, "hi"
      until (i==10)         # comment 8

# for
      for (i=0,i<10,i=i+1)  # comment 9
        print *, "hi"
      endfor                # comment 10

      for (i=0,i<10,i=i+1)  # comment 9b
        print *, "hi"
      end for               # comment 10b

      for (,i<10,i=i+1)     # null initial condition
        print *, "hi"
      end for

# next and break
      i = 0
      do                    # comment 11
        if (i == 1) next    # comment 12
        print *, "hi"
        i = i + 1
        if (i == 10) break  # comment 13
        next                # comment 14
        break               # comment 15
      enddo                 # comment 16

      end
